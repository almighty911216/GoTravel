<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.almig.android.fragment.HomeFragment">

    <com.example.imagesliding.SliderLayout
        android:id="@+id/slider_adv"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:pager_animation="Accordion"
        app:auto_cycle="true"
        app:indicator_visibility="visible"
        app:pager_animation_span="1100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btn_home_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main_map"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/slider_adv"
        app:layout_constraintLeft_toLeftOf="parent"/>
<!--    <TextView
        android:id="@+id/tv_home_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="길찾기"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_home_map"
        app:layout_constraintLeft_toLeftOf="@id/btn_home_map"
        app:layout_constraintRight_toRightOf="@id/btn_home_map"/>-->

    <ImageView
        android:id="@+id/btn_home_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main_book"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/slider_adv"
        app:layout_constraintLeft_toRightOf="@id/btn_home_map"/>

    <ImageView
        android:id="@+id/btn_home_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main_search"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/slider_adv"
        app:layout_constraintLeft_toRightOf="@id/btn_home_book"/>

    <ImageView
        android:id="@+id/btn_home_footprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main_foot"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_home_map"
        app:layout_constraintLeft_toLeftOf="@id/btn_home_map"
        app:layout_constraintRight_toRightOf="@id/btn_home_book"/>

    <ImageView
        android:id="@+id/btn_home_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main_stamp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_home_map"
        app:layout_constraintLeft_toLeftOf="@id/btn_home_book"
        app:layout_constraintRight_toRightOf="@id/btn_home_search"/>

</android.support.constraint.ConstraintLayout>
